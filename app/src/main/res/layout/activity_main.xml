<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etMSSV"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="MSSV" />

    <EditText
        android:id="@+id/etHoTen"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Họ tên" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <RadioButton
            android:id="@+id/rbNam"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="Nam" />

        <RadioButton
            android:id="@+id/rbNu"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="Nữ" />
    </RadioGroup>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Email" />

    <EditText
        android:id="@+id/etSoDienThoai"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Số điện thoại" />

    <Button
        android:id="@+id/btnChonNgay"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:text="Chọn Ngày Sinh" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="56dp" />

    <Spinner
        android:id="@+id/spTinhThanh"
        android:layout_width="match_parent"
        android:layout_height="56dp" />

    <CheckBox
        android:id="@+id/cbDongYDieuKhoan"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:text="Tôi đồng ý với các điều khoản" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Submit" />
</LinearLayout>
